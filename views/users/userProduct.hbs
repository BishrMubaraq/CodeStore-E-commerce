<section>
	<!-- Product -->
	<div id="productFilter" class="bg0 m-t-100 p-b-140">
		<div class="container">
			<div class="flex-w flex-sb-m p-b-52">
				<div class="flex-w flex-l-m filter-tope-group m-tb-10">
					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
						ALL PRODUCTS
					</button>
					{{#each categories}}
					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".{{this.name}}">
						{{this.name}}
					</button>
					{{/each}}
				</div>

				<div class="flex-w flex-c-m m-tb-10">
					<div
						class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
						<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
						<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
						Filter
					</div>

					<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
						<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
						<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
						Search
					</div>
				</div>

				<!-- Search product -->
				<div class="dis-none panel-search w-full p-t-10 p-b-15">
					<div class="bor8 dis-flex p-l-15">
						<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
							<i class="zmdi zmdi-search"></i>
						</button>

						<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" placeholder="Search">
					</div>
				</div>

				<!-- Filter -->
				<div class="dis-none panel-filter w-full p-t-10">
					<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
						<div class="filter-col1 p-r-15 p-b-27">
							<div class="mtext-102 cl2 p-b-15">
								Sort By
							</div>

							<ul>
								<li class="p-b-6 d-flex">
									<input type="radio" name="" checked hidden>
								</li>
								<li class="p-b-6 d-flex">
									<input type="radio" name="sort" value="LH">
									<label for="" class="p-l-9">Price: Low to High</label>
								</li>
								<li class="p-b-6 d-flex">
									<input type="radio" name="sort" value="HL">
									<label for="" class="p-l-9">Price: High to Low</label>
								</li>
							</ul>
						</div>

						<div class="filter-col2 p-r-15 p-b-27">
							<div class="mtext-102 cl2 p-b-15">
								Price
							</div>

							<ul>
								<li class="p-b-6 d-flex">
									<input type="radio" name="" checked hidden>
								</li>

								<li class="p-b-6 d-flex">
									<input type="radio" name="price" value="500">
									<label for="" class="p-l-9">
										<span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>0 - <span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>500</label>
								</li>
								<li class="p-b-6 d-flex">
									<input type="radio" name="price" value="1000">
									<label for="" class="p-l-9"><span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>500 - <span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>1000</label>
								</li>

								<li class="p-b-6 d-flex">
									<input type="radio" name="price" value="2000">
									<label for="" class="p-l-9"><span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>1000 - <span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>2000</label>
								</li>

								<li class="p-b-6 d-flex">
									<input type="radio" name="price" value="3000">
									<label for="" class="p-l-9"><span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>2000 - <span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>3000</label>
								</li>

								<li class="p-b-6 d-flex">
									<input type="radio" name="price" value="3001">
									<label for="" class="p-l-9"><span
											style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
											₹
										</span>3000 +</label>
								</li>
							</ul>
						</div>
						<div class="filter-col2 p-r-15 p-b-27">
							<div class="mtext-102 cl2 p-b-15">
								Category
							</div>

							<ul>
								<li class="p-b-6 d-flex">
									<input type="checkbox" name="" checked hidden>
								</li>

								<li class="p-b-6 d-flex">
									<input type="checkbox" name="category" value="MENS">
									<label for="">Mens</label>
								</li>

								<li class="p-b-6 d-flex">
									<input type="checkbox" name="category" value="WOMENS">
									<label for="">Womens</label>
								</li>

								<li class="p-b-6 d-flex">
									<input type="checkbox" name="category" value="KIDS">
									<input type="checkbox" name="category" value="ALL" hidden checked>
									<label for="">Kids</label>
								</li>


							</ul>
							
						</div>
						<ul class="my-3"
							<li><button class="btn btn-secondary">Apply</button></li>
							</ul>
					</div>
				</div>
			</div>
			<div>
				<div id="productShowCase" class="row isotope-grid">
					{{#each products}}
					<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item {{category}}">
						<!-- Block2 -->
						<div class="block2">
							<div class="block2-pic hov-img0">
								<img style="height: 25rem; object-fit: cover;"
									src="/public/product-images/{{images.[0]}}" alt="IMG-PRODUCT">

								<a href="/product-details?id={{_id}}"
									class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
									View
								</a>
							</div>

							<div class="block2-txt flex-w flex-t p-t-14">
								<div class="block2-txt-child1 flex-col-l ">
									<a href="/product-details?id={{_id}}"
										class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
										{{name}}
									</a>

									<span class="stext-105 cl3">
										${{price}}
									</span>
								</div>

								<div class="block2-txt-child2 flex-r p-t-3">
									<a onclick="addToWishList('{{_id}}')"
										class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
										<img class="icon-heart1 dis-block trans-04"
											src="/public/assets/images/icons/icon-heart-01.png" alt="ICON">
										<img class="icon-heart2 dis-block trans-04 ab-t-l"
											src="/public/assets/images/icons/icon-heart-02.png" alt="ICON">
									</a>
								</div>
							</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>

</section>
<script>
	function addToWishList(proId) {

		$.ajax({
			url: 'add-to-wishlist',
			data: {
				productId: proId
			},
			method: 'post',
			success: (response) => {
				if (response.login) {
					if (response.status) {
						Swal.fire({
							text: 'Item added to Wishlist',
							target: '#custom-target',
							customClass: {
								container: 'position-absolute'
							},
							toast: true,
							position: 'bottom-right'
						})
					} else {
						Swal.fire({
							text: 'Item removed from Wishlist',
							target: '#custom-target',
							customClass: {
								container: 'position-absolute'
							},
							toast: true,
							position: 'bottom-right'
						})
					}
					$("#icons").load(window.location.href + " #icons");
					$("#icons1").load(window.location.href + " #icons1");
				} else {
					Swal.fire({
						text: 'Please Signin',
						target: '#custom-target',
						customClass: {
							container: 'position-absolute'
						},
						toast: true,
						position: 'bottom-right'
					})
				}

			}
		})
	}
</script>