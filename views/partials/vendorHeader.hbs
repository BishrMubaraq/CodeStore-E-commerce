<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    <!-- Menu -->

    <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
      <div class="app-brand demo">
        <a href="/vendor" class="app-brand-link">

          <span class="app-brand-text h4 menu-text fw-bolder">CodeStore Vendor</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
          <i class="bx bx-chevron-left bx-sm align-middle"></i>
        </a>
      </div>

      <div class="menu-inner-shadow"></div>

      <ul class="menu-inner py-1">
        <!-- Dashboard -->
        <li class="menu-item {{#if vendorHome}} active {{/if}}">
          <a href="/vendor" class="menu-link">
            <i class="menu-icon tf-icons bx bx-home-circle"></i>
            <div data-i18n="Analytics">Dashboard</div>
          </a>
        </li>
        <!-- Prodct Management -->
        <li class="menu-item {{#if productManagement}} active {{/if}}">
          <a href="/vendor/products" class="menu-link">
            <i class="menu-icon tf-icons bx bx-cart"></i>
            <div data-i18n="Analytics">Products Management</div>
          </a>
        </li>
        <li class="menu-item {{#if categoryManagement}} active {{/if}}">
          <a href="/vendor/categories" class="menu-link">
            <i class="menu-icon tf-icons bx bx-category"></i>
            <div data-i18n="Analytics">Category Management</div>
          </a>
        </li>
        <li class="menu-item {{#if orderManagement}} active {{/if}}">
          <a href="/vendor/orders" class="menu-link">
            <i class="menu-icon tf-icons bx bxs-package"></i>
            <div data-i18n="Analytics">Order Management</div>
          </a>
        </li>
         <li class="menu-item {{#if productReview}} active {{/if}}">
          <a href="/vendor/product-review" class="menu-link">
            <i class="menu-icon tf-icons bx bxs-message-square-detail"></i>
            <div data-i18n="Analytics">Product Reviews</div>
          </a>
        </li>

      </ul>
    </aside>
    <!-- / Menu -->

    <!-- Layout container -->
    <div class="layout-page">
      <!-- Navbar -->

      <nav
        class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
        id="layout-navbar">
        <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
          <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
            <i class="bx bx-menu bx-sm"></i>
          </a>
        </div>

        <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
          

          <ul class="navbar-nav flex-row align-items-center ms-auto">
            <!-- Place this tag where you want the button to render. -->
            <!-- User -->
            <li class="nav-item navbar-dropdown dropdown-user dropdown">
              <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                {{#if vendorData.profile-photo}}
                <div class="avatar avatar-online">
                  <img src="/public/product-images/{{vendorData.profile-photo}}" alt class="w-px-40 rounded-circle"
                    style="object-fit: cover;" />
                </div>
                {{else}}
                <div class="avatar avatar-online">
                  <img src="/public/codeStoreImages/profile image.jpg" alt class="w-px-40 h-auto rounded-circle" />
                </div>
                {{/if}}

              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <a class="dropdown-item" href="#">
                    <div class="d-flex">
                      <div class="flex-shrink-0 me-3">
                        {{#if vendorData.profile-photo}}
                        <div class="avatar avatar-online">
                          <img src="/public/product-images/{{vendorData.profile-photo}}" alt
                            class="w-px-40 rounded-circle" style="object-fit: cover;" />
                        </div>
                        {{else}}
                        <div class="avatar avatar-online">
                          <img src="/public/codeStoreImages/profile image.jpg" alt
                            class="w-px-40 h-auto rounded-circle" />
                        </div>
                        {{/if}}
                      </div>
                      <div class="flex-grow-1">
                        <span class="fw-semibold d-block">{{vendorData.name}}</span>
                        <small class="text-muted">Vendor</small>
                      </div>
                    </div>
                  </a>
                </li>
                <li>
                  <div class="dropdown-divider"></div>
                </li>
                <li>
                  <a class="dropdown-item" href="/vendor/profile">
                    <i class="bx bx-user me-2"></i>
                    <span class="align-middle">My Profile</span>
                  </a>
                </li>
                <li>
                  <div class="dropdown-divider"></div>
                </li>
                <li>
                  <a class="dropdown-item" onclick="return confirm('Are you sure to logout?')" href="/vendor/logout">
                    <i class="bx bx-power-off me-2"></i>
                    <span class="align-middle">Log Out</span>
                  </a>
                </li>
              </ul>
            </li>
            <!--/ User -->
          </ul>
        </div>
      </nav>

      <!-- / Navbar -->